 <!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
 "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
 <node>
   <interface name="org.spacemeld.device">
    <method name="getButtonCount">
        <arg name="response" type="y" direction="out"/>
    </method>
    <method name="getDeviceName">
        <arg name="response" type="s" direction="out"/>
    </method>
    <method name="getInterfaceName">
        <arg name="response" type="s" direction="out"/>
    </method>
    <method name="getPath">
        <arg name="response" type="s" direction="out"/>
    </method>
    <signal name="displacement">
      <arg name="axis0" type="n" direction="out"/>
      <arg name="axis1" type="n" direction="out"/>
      <arg name="axis2" type="n" direction="out"/>
      <arg name="axis3" type="n" direction="out"/>
      <arg name="axis4" type="n" direction="out"/>
      <arg name="axis5" type="n" direction="out"/>
    </signal>
    <signal name="button">
        <arg name="buttonNumber" type="y" direction="out"/>
        <arg name="buttonDown" type="b" direction="out"/>
    </signal>
   </interface>
 </node>
